/* package codechef; // don't place package name! */

import java.util.*;
import java.lang.*;
import java.io.*;

/* Name of the class has to be "Main" only if the class is public. */
class SquareN
{
	public static void main (String[] args) throws java.lang.Exception
	{
		boolean ret = isPower(12);
		System.out.println(" i is " + ret);
		    // your code goes here
	}
	static boolean isPower(int a) {
        
        double x =  Math.sqrt(a);
        if (x == 0)
            return false;
            else if ( x != 0 ){
                if ( Math.round(x) == x )
                    System.out.println( " as " + x + " ^ " + x +" = " + a);
                    return true;
            }
        return false;
    }
}
